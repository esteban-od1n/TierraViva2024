{% extends 'admin/base.html.twig' %}

{% block body %}
<div class="flex flex-col py-5 gap-3 m-8">
    <h1 class="font-heading text-6xl">Agregar recurso</h1>
    {% if type is not empty %}
    {{ form_start(resourcesForm) }}
        {{form_row(resourcesForm.name)}}
        {{form_row(resourcesForm.description)}}
        {{form_row(resourcesForm.resourceFile)}}
        <input class="w-full px-4 py-2 border rounded-lg text-gray-700 placeholder-gray-500 bg-white focus:ring-2 focus:ring-timber-green-500 focus:outline-none" type="text" disabled value="{{ type.value }}">
        {{form_row(resourcesForm.visible)}}
        {% include 'components/button/default.html.twig' with {text: 'Crear'} %}
    {{ form_end(resourcesForm) }}
    {% else %}
        <p>Elige el tipo de recurso a agregar</p>
        <form>
        {% for t in resourceTypes %}
            <div>
                <input type="radio" id="type-{{t.value}}" name="type" value="{{ t.value }}" />
                <label for="type-{{t.value}}">{{t.value}}</label>
            </div>
        {% endfor %}
        {% include 'components/button/default.html.twig' with {text: 'Elegir'} %}
        </form>
    {% endif %}
</div>
{% endblock %}
