<a class="flex flex-wrap justify-center gap-5" href="{{ href ?? '' }}">
    <div class="bg-white shadow-lg rounded-3xl p-6 max-w-sm">
        {% if type == enum('App\\Enum\\ResourceTypes').VIDEO %}
            <img class="rounded-lg w-full h-64 object-cover" src="imgs/videochica.png" alt="Video" />
        {% elseif type == enum('App\\Enum\\ResourceTypes').NEWS %}
            <img class="rounded-lg w-full h-64 object-cover" src="imgs/videochico.png" alt="Noticias" />
        {% elseif type == enum('App\\Enum\\ResourceTypes').DOCUMENTARY %}
            <img class="rounded-lg w-full h-64 object-cover" src="imgs/limpieza.jpeg" alt="Documental" />
        {% elseif type == enum('App\\Enum\\ResourceTypes').BOOK %}
            <img class="rounded-lg w-full h-64 object-cover" src="imgs/pille-r-priske-nosotros.jpg" alt="Libro" />
        {% endif %}
        <div class="mt-4">
            <div class="text-xl font-semibold text-left">{{ title }}</div>
            <div class="text-base text-left text-gray-600">
                {{ body }}
            </div>
        </div>
    </div>
</a>
