<nav class="flex items-center justify-between py-4">
  <ul class="inline-flex items-center">
    {% if previous is defined and previous is not empty %}
      <li>
        <a href="{{ previous.path }}" class="px-3 py-2 ml-0 leading-tight text-timber-green-700 bg-white border border-timber-green-500 rounded-l-lg hover:bg-timber-green-100 hover:text-timber-green-900">Anterior</a>
      </li>
    {% endif %}

    {% for page in pages %}
      <li>
        {% if page.name == current %}
          <span class="px-3 py-2 leading-tight text-white bg-timber-green-700 border border-timber-green-500">{{ page }}</span>
        {% else %}
          <a href="{{ page.path }}" class="px-3 py-2 leading-tight text-timber-green-700 bg-white border border-timber-green-500 hover:bg-timber-green-100 hover:text-timber-green-900">{{ page.label }}</a>
        {% endif %}
      </li>
    {% endfor %}

    {% if next is defined and next is not empty %}
      <li>
        <a href="{{ next.path }}" class="px-3 py-2 leading-tight text-timber-green-700 bg-white border border-timber-green-500 rounded-r-lg hover:bg-timber-green-100 hover:text-timber-green-900">Siguiente</a>
      </li>
    {% endif %}
  </ul>
</nav>
