{% macro slide(img, label, display, text, btn_label = "Leer") %}
<div class="hidden animate-[slide-reveal_1s_ease_forwards] absolute w-full h-full flex flex-col gap-5 items-center justify-center text-center"
    data-slider-item>
    <img src="{{ img }}" alt="slider image"
        class="-z-10 brightness-50 scale-110 animate-[smooth-scale_7s_linear_forwards] pointer-events-none object-cover absolute w-full h-full">
    <p class="font-label text-3xl text-pistachio-400 font-bold uppercase">{{ label }}</p>
    <h1 class="font-display text-white text-5xl">{{ display }}</h1>
    <p class="font-body text-white">{{ text }}</p>
    <a class="btn-outline">{{btn_label}}</a>
</div>
{% endmacro -%}

<div class="flex flex-col relative h-3/4 overflow-hidden z-0 w-full h-full min-h-[500px]" data-slider>
    {{ _self.slide(
    "slider/slider-1_robinwersichutm.jpg",
    "Agricultura Urbana",
    "Cultiva tus alimentos en casa",
    "Conoce diferentes métodos."
    ) }}
    {{ _self.slide(
    "slider/slider-2_neslihan-gunaydin.jpg",
    "Conoce como lograrlo",
    "Diversas herramientas para iniciar en la agricultura",
    "Informate más sobre los métodos."
    ) }}
    {{ _self.slide(
    "slider/slider-3_thomas-gamstaetter.jpg",
    "Conoce nuestros Proveedores",
    "Diversas herramientas para iniciar en la agricultura",
    "Tanto productos como herramientas."
    ) }}
    <button aria-label="slider to next" data-prev-btn class="absolute w-fit h-fit z-0 inset-y-1/2 left-5">
        <div class="before:content-[''] before:absolute before:w-full before:h-full before:rotate-45 before:top-0 before:left-0 before:border-2 before:rounded
            text-pistachio-400 relative p-5">
                <i class="fa fa-2xl fa-chevron-left"></i>
        </div>
    </button>
    <button aria-label="slider to next" data-next-btn class="absolute w-fit h-fit z-0 inset-y-1/2 right-5">
        <div class="before:content-[''] before:absolute before:w-full before:h-full before:rotate-45 before:top-0 before:left-0 before:border-2 before:rounded
            text-pistachio-400 relative p-5">
                <i class="fa fa-2xl fa-chevron-right"></i>
        </div>
    </button>
</div>
