{% extends 'anonym/base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
<div class="flex justify-center items-center min-h-screen bg-timber-green-100">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden w-96">
        
        <div class="p-6">
            <h1 class="text-2xl font-semibold text-center mb-4 text-timber-green-700">Registro</h1>
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="text-pancho-500 text-sm" role="alert">{{ flash_error }}</div>
            {% endfor %}
            
            {{ form_start(registrationForm) }}

             <div class="mb-4">
                {{ form_label(registrationForm.name, 'Nombre o Apodo') }}
                {{ form_widget(registrationForm.name, {'attr': {'class': 'w-full p-2 border-b-2 border-pistachio-500 focus:outline-none'}}) }}
                {{ form_errors(registrationForm.name) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.email, 'Correo electronico') }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full p-2 border-b-2 border-pistachio-500 focus:outline-none'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.plainPassword, 'Contraseña') }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full p-2 border-b-2 border-pistachio-500 focus:outline-none'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="mb-6 flex items-center">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
                <span style="margin-right: 4px;" class="text-sm text-lochinvar-500">Acepta los</span> <!-- Espacio en píxeles -->
                <a href="{{ path('TermCondiciones') }}" class="text-lochinvar-600 underline text-sm" target="_blank">términos y condiciones</a>
            </div>

            <div class="flex justify-between items-center mb-4">
                <a href="/login" class="text-sm text-lochinvar-500">¿Ya tienes cuenta?</a>
            </div>

            <div class="flex justify-center">
                <button type="submit" class="bg-gradient-to-r from-lochinvar-400 to-lochinvar-600 text-white px-6 py-2 rounded-full">Crear Cuenta</button>
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>

{% endblock %}
