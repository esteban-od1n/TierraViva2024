{% extends 'anonym/base.html.twig' %}

{% block body %}
<section class="bg-things-pattern py-10">
    <div class="container mx-auto">
        <h2 class="text-center text-buttercup-500 font-bold text-3xl mb-8">Perfil del Usuario</h2>
        <div class="flex justify-center">
            <div class="bg-white rounded-lg shadow-lg p-6 max-w-md w-full flex flex-col items-center">
                <!-- Foto de perfil -->
                <div class="flex-shrink-0">
                    <img src="{{ user.profilePicture|default('imgs/default-profile.png') }}" alt="Foto de Perfil" class="w-32 h-32 rounded-full border-4 border-buttercup-500 mb-4">
                </div>
                <!-- Información del usuario -->
                <div class="text-center mb-4">
                    <h3 class="text-lg font-semibold text-gray-800">{{ app.user.name }}</h3>
                    <p class="text-gray-600">{{ app.user.email }}</p>
                </div>
                <!-- Botón para foto -->
                <div class="mt-4 text-center">
                    <input type="file" name="profile_picture" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-buttercup-500 file:text-white hover:file:bg-buttercup-600">
                    <button type="button" class="mt-2 bg-green-700 text-white px-4 py-2 rounded-md hover:bg-green-800 focus:outline-none">
                        Subir nueva foto
                    </button>
                </div>
            </div>
        </div>
        <!-- Botón de cerrar sesión -->
        <div class="flex justify-center mt-5">
            {% include 'components/button.html.twig' with { text: "Cerrar sesión", href: '/logout', class: 'bg-green-700 text-white px-4 py-2 rounded-md hover:bg-green-800 focus:outline-none' } only %}
        </div>
    </div>
</section>
{% endblock %}
