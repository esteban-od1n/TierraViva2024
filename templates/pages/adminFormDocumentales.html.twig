{% extends 'base.html.twig' %}

{% block body %}
<section class="bg-gray-100 py-10">
    <div class="container mx-auto">
        <h2 class="text-center text-buttercup-500 font-bold text-3xl mb-8">Agregar Documentales 游꿘</h2>
        <div class="bg-white rounded-lg shadow-lg p-6 max-w-3xl mx-auto">
            <form>
                <!-- T칤tulo del documental -->
                <div class="mb-4">
                    <label for="titulo" class="block text-sm font-medium text-gray-700">T칤tulo del documental</label>
                    <input type="text" id="titulo" name="titulo" required
                           class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-buttercup-500 focus:border-buttercup-500"
                           placeholder="Ingresa el t칤tulo del documental">
                </div>

                <!-- Descripci칩n del documental -->
                <div class="mb-4">
                    <label for="descripcion" class="block text-sm font-medium text-gray-700">Descripci칩n del documental</label>
                    <textarea id="descripcion" name="descripcion" required rows="4"
                              class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-buttercup-500 focus:border-buttercup-500"
                              placeholder="Ingresa la descripci칩n del documental"></textarea>
                </div>

                <!-- Enlace del documental -->
                <div class="mb-4">
                    <label for="enlace" class="block text-sm font-medium text-gray-700">Enlace del documental</label>
                    <input type="url" id="enlace" name="enlace" required
                           class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-buttercup-500 focus:border-buttercup-500"
                           placeholder="Ingresa el enlace del documental">
                </div>

                <!-- Miniatura del documental -->
                <div class="mb-4">
                    <label for="miniatura" class="block text-sm font-medium text-gray-700">Miniatura del documental</label>
                    <input type="file" id="miniatura" name="miniatura" accept="image/*" required
                           class="mt-1 block w-full border border-gray-300 rounded-md focus:ring-buttercup-500 focus:border-buttercup-500">
                </div>

                <!-- Categor칤a del documental -->
                <div class="mb-4">
                    <label for="categoria" class="block text-sm font-medium text-gray-700">Categor칤a del documental</label>
                    <select id="categoria" name="categoria" required
                            class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-buttercup-500 focus:border-buttercup-500">
                        <option value="" disabled selected>Selecciona una categor칤a</option>
                        <option value="ciencia">Ciencia</option>
                        <option value="historia">Historia</option>
                        <option value="naturaleza">Naturaleza</option>
                        <option value="sociedad">Sociedad</option>
                    </select>
                </div>

                <!-- Bot칩n de guardar -->
                <div class="flex justify-center">
                    <button type="submit"
                            class="bg-buttercup-500 text-white py-2 px-4 rounded-md hover:bg-buttercup-600 focus:ring-2 focus:ring-buttercup-300 focus:outline-none">Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
{% endblock %}
