{% extends 'base.html.twig' %}

{% macro icon_btn(icon, text) %}
<div class="flex flex-row p-4 font-label items-center gap-2">
    {% include 'icons/' ~ icon %}
    <span>{{ text }}</span>
</div>
{% endmacro %}

{% block body %}
<div class="flex flex-col items-center">
    <div class="flex flex-col relative h-3/4 overflow-hidden z-0 w-full h-full min-h-[500px]">
        <div class="absolute w-full h-full flex flex-col gap-5 items-center justify-center text-center">
            <img src="/imgs/pille-r-priske-nosotros.jpg" alt="slider image"
                class="-z-10 brightness-50 scale-110 animate-[smooth-scale_7s_linear_forwards] pointer-events-none object-cover absolute w-full h-full">
            <p class="font-label text-3xl text-pistachio-400 font-bold uppercase">HERRAMIENTAS Y MÃ‰TODOS</p>
            <h1 class="font-display text-white text-5xl">Todo lo que necesitas para empezar en la agricultura urbana
            </h1>
        </div>
    </div>
    <div class="flex flex-row bg-gradient-to-b from-timber-green-900 to-lochinvar-600 gap-4 self-stretch">
        <div class="flex flex-row m-auto text-white">
            {{ _self.icon_btn('information-circle-1.svg.twig', 'Noticias') }}
            {{ _self.icon_btn('logo-youtube.svg.twig', 'Videos') }}
            {{ _self.icon_btn('document-text.svg.twig', 'Documentales') }}
            {{ _self.icon_btn('book.svg.twig', 'Manuales o libros') }}
        </div>
    </div>
    <div
        class="flex self-stretch flex-col py-6 relative before:top-0 before:left-0 items-center z-0 gap-3
    before:w-full before:h-full before:absolute before:bg-things-pattern before:bg-repeat before:opacity-30 before:bg-center before:-z-10">
        <h1 class="font-heading text-3xl text-pistachio-500 text-center py-2 px-5 bg-pistachio-50 rounded-3xl">BUSQUEDA
            POR CATEGORIAS</h1>
        <div class="flex flex-row justify-center gap-3">
            {% set icons = [
            ['information-circle-1.svg.twig', 'Noticias', '/recursos/Noticias'],
            ['logo-youtube.svg.twig', 'Videos', '/recursos/videos'],
            ['document-text.svg.twig', 'Documentales', '/recursos/documentos'],
            ['book.svg.twig', 'Manuales o libros', '/recursos/libros'],
            ] %}
            {% for i in icons %}
            <a class="bg-kumera-500 text-white rounded-xl" href="{{ i[2] }}">
                {{ _self.icon_btn(i[0], i[1]) }}
            </a>
            {% endfor %}
        </div>
    </div>
    {% endblock %}
