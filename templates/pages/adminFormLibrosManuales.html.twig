{% extends 'base.html.twig' %}

{% block body %}
<section class="bg-gray-100 py-10">
    <div class="container mx-auto">
        <h2 class="text-center text-buttercup-500 font-bold text-3xl mb-8">Agregar Libros/Manuales 📚</h2>
        <div class="bg-white rounded-lg shadow-lg p-6 max-w-3xl mx-auto">
            <form>
                <!-- Título del libro/manual -->
                <div class="mb-4">
                    <label for="titulo" class="block text-sm font-medium text-gray-700">Título del libro/manual</label>
                    <input type="text" id="titulo" name="titulo" required
                           class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-buttercup-500 focus:border-buttercup-500"
                           placeholder="Ingresa el título del libro/manual">
                </div>

                <!-- Autor del libro/manual -->
                <div class="mb-4">
                    <label for="autor" class="block text-sm font-medium text-gray-700">Autor del libro/manual</label>
                    <input type="text" id="autor" name="autor" required
                           class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-buttercup-500 focus:border-buttercup-500"
                           placeholder="Ingresa el autor del libro/manual">
                </div>

                <!-- Descripción del libro/manual -->
                <div class="mb-4">
                    <label for="descripcion" class="block text-sm font-medium text-gray-700">Descripción del libro/manual</label>
                    <textarea id="descripcion" name="descripcion" required rows="4"
                              class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-buttercup-500 focus:border-buttercup-500"
                              placeholder="Ingresa la descripción del libro/manual"></textarea>
                </div>

                <!-- Enlace del libro/manual -->
                <div class="mb-4">
                    <label for="enlace" class="block text-sm font-medium text-gray-700">Enlace del libro/manual</label>
                    <input type="url" id="enlace" name="enlace" required
                           class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-buttercup-500 focus:border-buttercup-500"
                           placeholder="Ingresa el enlace del libro/manual">
                </div>

                <!-- Miniatura del libro/manual -->
                <div class="mb-4">
                    <label for="miniatura" class="block text-sm font-medium text-gray-700">Miniatura del libro/manual</label>
                    <input type="file" id="miniatura" name="miniatura" accept="image/*" required
                           class="mt-1 block w-full border border-gray-300 rounded-md focus:ring-buttercup-500 focus:border-buttercup-500">
                </div>

                <!-- Botón de guardar -->
                <div class="flex justify-center">
                    <button type="submit"
                            class="bg-buttercup-500 text-white py-2 px-4 rounded-md hover:bg-buttercup-600 focus:ring-2 focus:ring-buttercup-300 focus:outline-none">Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
{% endblock %}
